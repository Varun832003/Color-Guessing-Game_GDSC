<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:background="@drawable/gradient_list">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/artifika"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:text="Now tap the colours in the same order as they were displayed!"
        android:textColor="#041260"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="170dp"
        android:columnCount="3"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100sp"
            android:height="100sp"
            android:onClick="onClick"
            android:tag="red"
            app:backgroundTint="#A60D41"
            app:cornerRadius="15dp"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100sp"
            android:height="100sp"
            android:onClick="onClick"
            android:tag="blue"
            app:backgroundTint="#0E2EE2"
            app:cornerRadius="15dp"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100sp"
            android:height="100sp"
            android:onClick="onClick"
            android:tag="green"
            app:backgroundTint="#398F3D"
            app:cornerRadius="15dp"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100sp"
            android:height="100sp"
            android:onClick="onClick"
            android:tag="black"
            app:backgroundTint="#FF000000"
            app:cornerRadius="15dp"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100sp"
            android:height="100sp"
            android:onClick="onClick"
            android:tag="yellow"
            app:backgroundTint="#D2C126"
            app:cornerRadius="15dp"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100sp"
            android:height="100sp"
            android:onClick="onClick"
            android:tag="orange"
            app:backgroundTint="#EF8968"
            app:cornerRadius="15dp"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100sp"
            android:height="100sp"
            android:onClick="onClick"
            android:tag="pink"
            app:backgroundTint="#F67EF0"
            app:cornerRadius="15dp"
            tools:ignore="UsingOnClickInXml" />


    </GridLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="70dp"
        android:alpha="0.4"
        android:fontFamily="@font/amarante"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Submit"
        android:textColor="#040303"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#EEF0F3"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:alpha="0.4"
        android:fontFamily="@font/amarante"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Reset"
        android:textColor="#040303"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#EEF0F3"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/submit"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>